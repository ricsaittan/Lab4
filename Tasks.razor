@page "/tasks"
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <style>
        body 
        {
            font: "helvetica";
        }

        ul 
        {
            height: 150px;
            width: 100%;
            overflow: hidden;
            overflow-y: scroll;
        }
        .taskstable
        {
            overflow: hidden;
            overflow-y: scroll;
            height: 200px;
            width: 100%;
        }

        .late, .upcoming, .completed 
        {
            margin-bottom: 40px;
            height: 200px;
            border: black solid;
        }

        .upcoming h2 
        {
            padding: 3px;
            font-size: 20px;
            border: black solid;
        }
        .late h2 
        {
            padding: 3px;
            font-size: 20px;
            border: black solid;
        }
        .completed h2 
        {
            padding: 3px;
            font-size: 20px;
            border: black solid;
        }

        .title p 
        {
            padding-left: 10px;
        }
        .btn
        {
            margin-top: 10px;
            width: 100%;
        }
    </style>
</head>

<body>
    <div class="row content">
        <div class="col-sm-10 col1">
            <h1>Tasks</h1>
        </div>
        <div class="col-sm-2 col1">
            <button type="button" class="btn btn-primary">Add a Task</button>
        </div>
    </div>
    <div class="progress" style="height: 30px;">
        <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
    </div>

    <div class="amountofprogress">
        <p role="percent">Currently Finished @percentageFinished %</p>
    </div>
    <table class="taskstable">
        <thead>
            <tr>
                <th>Task</th>
                <th>Date</th>
                <th>Status</th>
                <th>Is Completed</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
        <div class="row content">
            <div class="col-sm-4 col1">
                <div class="late">
                    <h2><small>Late</small></h2>
                    <ul>
                        <li>Link 1</li>
                        <li>Link 2</li>
                        <li>Link 3</li>
                        <li>Link 4</li>
                        <li>Link 5</li>
                        <li>Link 6</li> 
                        <li>Link 7</li> 
                        <li>Link 8</li>
                        <li>Link 9</li>
                        <li>Link 10</li>
                        <li>Link 11</li>
                        <li>Link 13</li>
                        <li>Link 13</li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-4 col1">
                <div class="upcoming">
                    <h2><small>Upcoming</small></h2>
                    <ul>
                        <li>Link 1</li>
                        <li>Link 2</li>
                        <li>Link 3</li>
                        <li>Link 4</li>
                        <li>Link 5</li>
                        <li>Link 6</li>
                        <li>Link 7</li>
                        <li>Link 8</li>
                        <li>Link 9</li>
                        <li>Link 10</li>
                        <li>Link 11</li>
                        <li>Link 13</li>
                        <li>Link 13</li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-4 col1">
                <div class="completed">
                    <h2><small>Completed</small></h2>
                    <ul>
                        <li>Link 1</li>
                        <li>Link 2</li>
                        <li>Link 3</li>
                        <li>Link 4</li>
                        <li>Link 5</li>
                        <li>Link 6</li>
                        <li>Link 7</li>
                        <li>Link 8</li>
                        <li>Link 9</li>
                        <li>Link 10</li>
                        <li>Link 11</li>
                        <li>Link 13</li>
                        <li>Link 13</li>
                    </ul>
                </div>
            </div>
        </div>
    <div class="title">
        <p>LearniMange</p>
    </div>


   

    @code {
        private int percentageFinished = 0;

    }
</body>